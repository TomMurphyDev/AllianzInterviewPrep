@page
@model InsureMe.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.FullName" class="control-label"></label>
                <input asp-for="User.FullName" class="form-control" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address" class="control-label"></label>
                <input asp-for="User.Address" class="form-control" />
                <span asp-validation-for="User.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.DateOfBirth" class="control-label"></label>
                <input asp-for="User.DateOfBirth" class="form-control" />
                <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.NoClaimsYears" class="control-label"></label>
                <input asp-for="User.NoClaimsYears" class="form-control" />
                <span asp-validation-for="User.NoClaimsYears" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.YearsLicenceHeld" class="control-label"></label>
                <input asp-for="User.YearsLicenceHeld" class="form-control" />
                <span asp-validation-for="User.YearsLicenceHeld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="User.Convictions" /> @Html.DisplayNameFor(model => model.User.Convictions))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="User.PenaltyPoints" /> @Html.DisplayNameFor(model => model.User.PenaltyPoints))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
